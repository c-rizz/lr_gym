

<!-- Launches gazebo with the cartpole environment loaded and
     all the nodes necessary to control and monitor the cartpole
     via ROS.
-->
<launch>
    <env name="ROSCONSOLE_FORMAT" value="[${severity}] [${walltime}] [${node}]: ${message}" />
    <!-- launch the custom world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch" >
        <arg name="paused" value="True"/>
        <!--arg name="use_sim_time" value="False" /-->
        <arg name="world_name" value="$(find demo_gazebo)/worlds/cartpole_world.world"/>
        <arg name="verbose" value="True"/>
        <arg name="physics" value="bullet"/>

        <env name="GAZEBO_MODEL_PATH" value="$(find demo_gazebo)/models:$(optenv GAZEBO_MODEL_PATH)"/>
    </include>



    <!-- spawn the Cartpole_v0 URDF -->
    <param name="robot_description" command="cat $(find demo_gazebo)/urdf/cartpole_v0.urdf" />
    <!-- spawn in gazebo (when gazebo starts) -->
    <node name="spawn_cartpole" pkg="gazebo_ros" type="spawn_model" respawn="false"
          output="screen" args="-file $(find demo_gazebo)/urdf/cartpole_v0.urdf -urdf -x 0 -y 0 -z 0 -model cartpole_v0">
    </node>
    <!--
    <node name="robot_state_publisher_cartpole_v0" pkg="robot_state_publisher" type="robot_state_publisher"
          respawn="false" output="screen">
              <param name="publish_frequency" type="double" value="5000.0" />
              <param name="ignore_timestamp" type="bool" value="true" />
              <param name="tf_prefix" type="string" value="cartpole_v0" />
              <remap from="/joint_states" to="/cartpole_v0/joint_states" />
    </node>
    -->


</launch>
